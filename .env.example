# WolvCapital Environment Configuration

# Django Security
# IMPORTANT: Generate a new secret key for production using:
# python manage.py shell -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production-MUST-BE-50-CHARS-MINIMUM
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.render.com

# Database
# For production, use PostgreSQL. For development, comment out to use SQLite
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Email (for django-allauth)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# Security (Production)
# Add your production domain(s) here for CSRF protection
CSRF_TRUSTED_ORIGINS=https://*.render.com,https://yourdomain.com

# Production Security Notes:
# - All security settings are automatically enabled when DEBUG=False and RENDER_EXTERNAL_HOSTNAME is set
# - This includes HTTPS redirects, secure cookies, HSTS headers, and XSS protection
# - Make sure your SECRET_KEY is at least 50 characters long and cryptographically secure
# - Never set DEBUG=True in production

# Site Configuration
SITE_ID=1